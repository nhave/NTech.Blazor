@namespace NTech.Blazor

<img id="@Id" src="@($"{Src}?no-cache={DateTimeOffset.UtcNow.ToUnixTimeSeconds()}")" height="@Size" width="@Size" class="avatar-img rounded-circle shadow-4 @Class" style="@Style" onerror="this.onerror=null; this.src='@ErrorSrc'">

@code {
	[Parameter] public string? Src { get; set; } = "api/account/avatar";
	[Parameter] public string? Id { get; set; }
	[Parameter] public string ErrorSrc { get; set; } = "_content/NTech.Blazor/no_avatar.png";
	[Parameter] public string? Size { get; set; }
	[Parameter] public string? Class { get; set; }
	[Parameter] public string? Style { get; set; }
}