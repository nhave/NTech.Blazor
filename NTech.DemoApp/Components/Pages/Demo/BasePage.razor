<Card>
    <CardHeader Class="border-0 pb-0">
		@Header
	</CardHeader>
	<NavtabMenu Class="card-tabs">
		<Navtab Name="Demo" Icon="bi-info-square-fill" To="demo" />
		<Navtab Name="Contex" Icon="bi-menu-app-fill" Title="Contex Menu" To="demo/contexmenu" />
		<Navtab Name="Select" Icon="bi-check-all" To="demo/select" />
		<Navtab Name="Dropdown" Icon="bi-three-dots-vertical" To="demo/dropdown" />
    </NavtabMenu>
	<CardBody>
		@Body
	</CardBody>
</Card>

@code {
	[Parameter] public RenderFragment Header { get; set; } = default!;
	[Parameter] public RenderFragment Body { get; set; } = default!;
}